{
   "mode": "Indexed",
   "policyRule": {
     "if": {
       "allOf": [
         {
             "field": "[concat('tags[',parameters('Owner'), ']')]",
             "equals": "[parameters('OwnerValue')]"
         },
          {
               "field": "[concat('tags[',parameters('Department'), ']')]",
               "equals": "[parameters('DepartmentValue')]"
             },
              {
               "field": "[concat('tags[',parameters('Environment'), ']')]",
               "equals": "[parameters('EnvironmentValue')]"
             },
           {
               "field": "[concat('tags[',parameters('Application'), ']')]",
               "equals": "[parameters('ApplicationValue')]"
             }
       ]
     },
     "then": {
         "effect": "deny"
      }
     },
     "parameters": {
         "Owner": {
         "type": "String",
         "metadata": {
             "description": "The Business app owner to contact."
         }
         },
         "OwnerValue": {
         "type": "String",
         "metadata": {
             "description": "Tag value: Business App owner's email. Example: name@cevt.se"
         },
             "Department": {
             "type": "String",
             "metadata": {
                 "description": "Provides information on department or team is responsible for administering/supporting the application."
         }
         },
             "DepartmentValue": {
             "type": "String",
             "metadata": {
                 "description": "Tag value: Team name/department. Example: Infrastructure Operation"
             }
         },
             "Environment": {
             "type": "String",
             "metadata": {
                 "description": "Provides information on what the resource group is used for (useful for maintenance, policy enforcement, chargeback, etc.)"
             }
         },
             "EnvironmentValue": {
             "type": "String",
             "metadata": {
                 "description": "Tag value: Dev, QA, Stage, Test, Prod. Example: Prod"
             }
         },
             "Application": {
             "type": "String",
             "metadata": {
                 "description": "Provides information on which application this resource is used to run."
             }
         },
             "ApplicationValue": {
             "type": "String",
             "metadata": {
                 "description": "Tag value: Application name. Example: Odoo"
             }
         }
     }
   }
 }