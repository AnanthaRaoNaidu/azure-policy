{
   "properties": {
     "displayName": "Audit SQL Database is Zone Redundant",     
     "description": "Will check is the SQL databases are configured for Zone Redundant",
     "mode": "All",
     "metadata": {
       "category": "SQL"      
     },
     "parameters": {      
      }
     },
     "policyRule": {
       "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.SQL/servers/databases"
          },
          {
            "field": "name",
            "notEquals": "master"
          },
          {
            "field": "Microsoft.Sql/servers/databases/zoneRedundant",
            "equals": "false"
          }
        ]
       },
       "then": {
         "effect": "Audit"
       }
     }   
 }