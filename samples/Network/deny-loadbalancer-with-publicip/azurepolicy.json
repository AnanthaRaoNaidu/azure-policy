{
    "type": "Microsoft.Authorization/policyDefinitions",
    "name": "deny-loadbalancer-with-publicip",
    "properties": {
        "displayName": "Deny loadbalancers with public ip",
        "description": "This policy denies creation of loadbalancer if using public ip.",
        "parameters": { },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Network/loadBalancers"
                    },
                    {
                        "field": "Microsoft.Network/loadBalancers/frontendIPConfigurations[*].subnet.id",
                        "notLike": "*"
                    }
                ]
            },
            "then": {
                "effect": "deny"
            }
        }
    }
}