{
  "properties": {
    "displayName": "[Preview] [PSP]: Do not allow containers privilege escalation in Kubernetes cluster",
    "policyType": "BuiltIn",
    "mode": "Microsoft.Kubernetes.Data",
    "description": "This policy blocks containers from using privilege escalation in a Kubernetes cluster. For instructions on using this policy, please go to https://aka.ms/kubepolicydoc.",
    "metadata": {
      "version": "2.0.0-preview",
      "category": "Kubernetes",
      "preview": true
    },
    "parameters": {
      "effect": {
        "type": "String",
        "defaultValue": "enforceOPAConstraint",
        "allowedValues": [
          "enforceOPAConstraint",
          "disabled"
        ],
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        }
      },
      "excludedNamespaces": {
        "type": "Array",
        "metadata": {
          "displayName": "Namespace exclusions",
          "description": "List of Kubernetes namespaces to exclude from policy evaluation. Providing a value for this parameter is optional."
        },
        "defaultValue": []
      }
    },
    "policyRule": {
      "if": {
        "field": "type",
        "in": [
          "AKS Engine",
          "Microsoft.Kubernetes/connectedClusters"
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "constraintTemplate": "https://raw.githubusercontent.com/EmandM/azure-policy/feature/privilege-escalation/built-in-references/Kubernetes/container-no-privilege-escalation/template.yaml",
          "constraint": "https://raw.githubusercontent.com/EmandM/azure-policy/feature/privilege-escalation/built-in-references/Kubernetes/container-no-privilege-escalation/constraint.yaml",
          "values": {
            "excludedNamespaces": "[parameters('excludedNamespaces')]"
          }
        }
      }
    }
  }
}