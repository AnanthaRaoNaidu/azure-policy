{
  "id": "/providers/Microsoft.Authorization/policyDefinitions/9a1b8c48-453a-4044-86c3-d8bfd823e4f5",
  "name": "9a1b8c48-453a-4044-86c3-d8bfd823e4f5",
  "properties": {
    "policyType": "BuiltIn",
    "metadata": {
      "version": "1.0.0",
      "category": "App Service"
    },
    "parameters": {
      "effect": {
        "type": "string",
        "allowedValues": [
          "AuditIfNotExists",
          "Disabled"
        ],
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "defaultValue": "AuditIfNotExists"
      }
    },
    "displayName": "FTPS only should be required in your API App",
    "policyRule": {
      "then": {
        "details": {
          "existenceCondition": {
            "field": "Microsoft.Web/sites/config/ftpsState",
            "equals": "FtpsOnly"
          },
          "type": "Microsoft.Web/sites/config",
          "name": "web"
        },
        "effect": "[parameters('effect')]"
      },
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "kind",
            "like": "*api"
          }
        ]
      }
    },
    "description": "Enable FTPS enforcement for enhanced security",
    "mode": "Indexed"
  }
}
