{
  "id": "/providers/Microsoft.Authorization/policyDefinitions/e9c8d085-d9cc-4b17-9cdc-059f1f01f19e",
  "name": "e9c8d085-d9cc-4b17-9cdc-059f1f01f19e",
  "properties": {
    "policyType": "BuiltIn",
    "metadata": {
      "version": "1.0.0",
      "category": "App Service"
    },
    "parameters": {
      "effect": {
        "type": "string",
        "allowedValues": [
          "AuditIfNotExists",
          "Disabled"
        ],
        "metadata": {
          "description": "Enable or disable the execution of the policy",
          "displayName": "Effect"
        },
        "defaultValue": "AuditIfNotExists"
      }
    },
    "displayName": "Remote debugging should be turned off for API Apps",
    "policyRule": {
      "then": {
        "details": {
          "existenceCondition": {
            "field": "Microsoft.Web/sites/config/remoteDebuggingEnabled",
            "equals": "false"
          },
          "type": "Microsoft.Web/sites/config",
          "name": "web"
        },
        "effect": "[parameters('effect')]"
      },
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "kind",
            "like": "*api"
          }
        ]
      }
    },
    "description": "Remote debugging requires inbound ports to be opened on an API apps. Remote debugging should be turned off.",
    "mode": "Indexed"
  }
}
